<div class="container text-center">
  <% if !current_user.nil? %>
    <h4><%= "Welcome Back #{current_user.name}" %></h4>
    <%= link_to "Send a Tweet", '#' %>
  <% else %>
    <h3>Please Sign In</h3>
  <% end %>
</br>
</div>
</br>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4">

	<div id="myCarousel" class="carousel slide">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
			<div class="item active">
              <img src="//placehold.it/1024x700" width="100%">
				<div class="carousel-caption">
					<h4>First Image</h4>
					<p>Hashtag Trend Goes Here</p>
				</div>
			</div>
			<div class="item">
              <img src="//placehold.it/1024x700/662222" width="100%">
				<div class="carousel-caption">
					<h4>Second Image</h4>
					<p>Hashtag Trend Goes Here</p>
				</div>
			</div>
			<div class="item">
				<img src="//placehold.it/1024x700/119922" width="100%">
				<div class="carousel-caption">
					<h4>Third Image</h4>
					<p>Hashtag Tred Goes Here</p>
				</div>
			</div>
		</div>
		<a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
		<a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
	</div>
	</div>

  <div class="col-md-1"></div>
  <div class="col-md-5">
  <div class="panel panel-default">
    <div class="panel-heading">Twitter Feed</div>
    <div class="panel-body">
      <ul class="list-group">
      <% @feed.each do |t| %>
        <li class="list-group-item"><h5>User: <%= t.user.name %></h5></li>
        <li class="list-group-item"><p>ID: <%= t.id %></p></li>
        <li class="list-group-item"><p>Text: <%= t.text %></p></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
</div>

<div class="container text-center">
  </br>
  <h5 class="text-inf">Version 0.0.1</h5>
  <h6 class="text-info">&copy; 2015 Tycho Metadata Analytics, LLC</h6>
</div>


